  </div>

  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

   <div>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>

  <% {'S': 'Sim', 'N': 'NÃ£o'}.each do |key, value| %>
