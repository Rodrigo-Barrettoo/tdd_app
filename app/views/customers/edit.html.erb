<% if @customer.errors.any? %>
  <% @customer.errors.full_messages.each do |message| %>
    <li>
      <%= message %>
    </li>
  <% end %>
<% end %>

<h1>Editando Cliente</h1>

<%= form_for @customer do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

   <div>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>

  <%= f.label :smoker %>
  <% {'S': 'Sim', 'N': 'NÃ£o'}.each do |key, value| %>
    <div>
      <%= f.radio_button :smoker, key %> <%= value %>
    </div>
  <% end %>

  <%= f.submit 'Atualizar Cliente' %>
<% end %>
